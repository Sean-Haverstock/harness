{
	"compilerOptions": {
		"lib": ["es6", "dom"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "es6",
		"jsx": "react",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "src/dist",
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["./src/client/*", "./src/client/types/**/*.d.ts"]
}
